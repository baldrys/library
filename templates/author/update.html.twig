{% extends 'base.html.twig' %}

{% block title %}Редактировать автора{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="mx-auto" style="width: 30%">
            <h1>Редактирование автора</h1>
                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.firstName, { 'attr': {'class': 'form-control'}, 'label': 'Имя'}) }}
                    {{ form_row(form.lastName, { 'attr': {'class': 'form-control'}, 'label': 'Фамилия'}) }}
                    {{ form_row(form.save, { 'attr' :{'class': 'btn btn-primary mt-3'}, 'label': 'Редактировать' }) }}

                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}